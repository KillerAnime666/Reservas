<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#111111"
    tools:context=".Alta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa Nombre"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etNombre"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa Carnet"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etCarnet"
            />
        
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingresa TelÃ©fono"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etTelefono"
            android:inputType="number"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingresa Departmento"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etDepartamento"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingresa Monto Depositado"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etMonto"
            android:inputType="number"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingresa Saldo Faltante"
            android:textColorHint="#2ef8a0"
            android:textColor="#2ef8a0"
            android:textSize="30dp"
            android:id="@+id/etSaldo"
            android:inputType="number"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#04683D"
                android:textColor="#2ef8a0"
                android:text="Grabar"
                android:id="@+id/btGrabaProducto"
                android:textSize="30dp"
                android:layout_weight="1"
                />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff0000"
                android:text="Volver"
                android:id="@+id/btSaleDeProducto"
                android:textSize="30dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
